<% unless cart.line_items.empty? %>

	<h2> Your Cart</h2>
	<table>
		<%= render cart.line_items	 %> <!-- Cart Total -->
		<tr>
			<td colspan="2"></td>
			<td class="total"><%= number_to_currency(cart.total_price)%></td>
		</tr>
	</table>


<%= button_to "Checkout", new_order_path, :method => :get, :class=>"btn-small btn-primary" %>
<%= button_to "Empty Cart", cart, :method => :delete, :confirm => "Are you sure?" , :class=> "btn-small btn-danger" %>

<!-- <%= link_to 'Edit', edit_cart_path(cart) %> |
<%= link_to 'Back', carts_path %>  -->
<% end %>
