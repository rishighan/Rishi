<%= nested_form_for([:admin,@product], :remote=>true, :html => {:multipart => true, :class=>"row"}) do |f| %>
<% if @product.errors.any? %>
<div id="error_explanation">
	<h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>
	<ul>
		<% @product.errors.full_messages.each do |msg| %>
		<li>
			<%= msg %>
		</li>
		<% end %>
	</ul>
</div>
<% end %>

<div class="well span8">
	<%= f.label :name %>
	<%= f.text_field :name %>

	<%= f.label :product_category_id %>
	
	<% for category in ProductCategory.find(:all) %>

		<%= check_box_tag "product[product_category_ids][]", category.id, @product.product_categories.include?(category) %>
		<%= category.title %>
	
	<% end %>
</div>

<!-- attached photo -->
<%= render :partial=> "shots_form", :locals =>{:f=> f} %>

<div class="well span8">

	<%= f.label :description %>
	<%= f.text_area :description, :class=> "span8" %>


<%= f.submit :class=>"btn btn-primary"%>
</div>
<% end %> 