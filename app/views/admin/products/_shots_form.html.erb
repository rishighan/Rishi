<div class="well span8" id="attachments">
	<%= f.label "Product Shots" %>
	<br>
	<%= f.fields_for :product_shots do |pshot| %>

	<% if pshot.object.new_record? %>
	<%= pshot.file_field :shot %>
	<%end%>

	<% unless pshot.object.new_record? %>
	<%= link_to image_tag(pshot.object.shot.url(:thumb)), pshot.object.shot.url(:medium)%>
	<br>
	<%= pshot.object.shot.url(:medium)%>
	<br>
	<%= link_to_function "Insert image into description", "insertMarkup(this,'image')", :class=> "btn btn-mini"%>
	<%end%>

	<%= pshot.link_to_remove "Remove this image", {:id=> @product.id, :class=> "btn btn-mini btn-danger"} %>
	<br>
	<br>
	<%end %>

	<%= f.link_to_add "Add another image", :product_shots, :class=> "btn btn-mini" %>
</div>