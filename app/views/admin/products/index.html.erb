<h1>Listing products</h1>

<ul class="listing">
<% @products.each do |product| %>
  
  <li class=<%= cycle('list_even', 'list_odd')%>>
    <%= product.title %> <br>
    <%= product.description %><br>
    <%= number_to_currency(product.price) %><br><br>
    
    Categories:<br>
    <ul>
    <% product.product_categories.each do |cat|%>
	<li><%= cat.title%></li>
	<%end%>
	</ul>
   
   <!-- product shots -->
   <% product.product_shots.each do |pshot| %>
   <%= image_tag pshot.shot.url(:thumb) %>
   <%end%>
   
   <br><br>
    <%= link_to 'Add a variant', new_admin_product_variant_path(@product) %>
    
    <%= link_to 'Show', admin_product_path(product) %>
    <%= link_to 'Edit', edit_admin_product_path(product) %>
    <%= link_to 'Destroy', admin_product_path(product), :confirm => 'Are you sure?', :method => :delete %>
  
  </li>
  
<% end %>

</ul>
<br />

<%= link_to 'New Product', new_admin_product_path %>
