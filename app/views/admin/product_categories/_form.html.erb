<%= form_for [:admin,@product_category], :html => { :class => 'form-horizontal' } do |f| %>
  
    <div class="well">
    <legend><%= controller.action_name.capitalize %> Product Category</legend>
      <%= f.label :title %>
      <%= f.text_field :title %>
     
      <br><br>
      <%= f.label :description %>
      <%= f.text_area :description, :rows=>5, :class => "span8" %>
      <br><br>

      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', admin_product_categories_path, :class => 'btn' %>
    </div>
  
<% end %>
