<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @post.title %>
</p>

<p>
  <b>Category:</b>
 <ul>
  <% @post.categories.each do |cat| %>
  <li> <%= cat.category_name %> </li>
  <% end -%>
</ul>
</p>

<p>
  <b>Content:</b>
  <%= markdown @post.content %><br>
 <hr>
  <% @post.citations.each do |citation| %>
  <h6><%= markdown citation.source_name %></h6>
  <%= markdown citation.extended_description %>

  <%end %> 
</p>

<p id="attachments">

	<% @post.attachments.each do |at|%>
	<%= image_tag at.photo.url(:thumb) %>
	<%end%>
</p>

<div class="btn-group">
<%= link_to 'Edit', edit_admin_post_path(@post), :class => "btn btn-mini" %>
<%= link_to 'Back', admin_posts_path , :class => "btn btn-mini"%>
</div>
