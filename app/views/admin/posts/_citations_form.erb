 
  <div class="well">
  <%= f.label :citations %>
  
  <%= f.fields_for :citations do |citation| %>
  

  <%= f.label :source_name%>
  <%= citation.text_field :source_name %> 
  
  <br><br>
  
  <%= f.label :extended_description%>
  <%= citation.text_area :extended_description, :class=>"span8", :rows=>5 %>
  <br>
 
 

  <%= link_to_function "Insert Superscript", "insertMarkup(this,'superscript', 0)", :class=> "insert-super-script", :class => "btn btn-mini"%>
  <%= citation.link_to_remove "Remove this citation", {:id=> @post.id, :class=>"btn btn-mini btn-danger"} %> <br><br>
  
   <%end %>	
  
  <%= f.link_to_add "Add another citation", :citations, :class=> "btn btn-mini" %>  
  </div>