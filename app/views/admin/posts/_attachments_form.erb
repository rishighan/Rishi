	  
  <div class="field" id="attachments">
  <%= f.label :attachments %>  <br>	
 
  <%= f.fields_for :attachments do |attach| %>
  
  <% if attach.object.new_record? %>
  <%= attach.file_field :photo %>
  <%end%>
    

  
  <% unless attach.object.new_record? %>
  	<%= link_to image_tag(attach.object.photo.url(:thumb)), attach.object.photo.url(:medium)%><br>
	<%= attach.object.photo.url(:medium)%><br>	
	<%= link_to_function "Insert image into post", "insertMarkup(this,'image')", :class=> "insert-image-markup"%>
 <%end%>
  
   
  <%= attach.link_to_remove "Remove this image", {:id=> @post.id} %> <br><br>
  
   <%end %>	
  
  <%= f.link_to_add "Add another image", :attachments %>  
  </div>