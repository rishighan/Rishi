<%= nested_form_for([:admin, @post],  :html => { :multipart => true }) do |f| %>

<% if @post.errors.any? %>
<div class="control-group error">
	<h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>
	<ul>
		<% @post.errors.full_messages.each do |msg| %>
		<li>
			<%= msg %>
		</li>
		<% end %>
	</ul>
</div>
<% end %>

		<div class="well span8">
			
			<%= f.label :title%>
			<%= f.text_field :title %>
		
			
		
			<%= f.label :category_id %>
			<%= collection_select(:post, :category_id, Category.all, :id, :category_name, :prompt => true) %>
			
			<%= f.label :keyword_list%>
			<%= f.text_field :keyword_list %>
			
			
		</div> 

		<!-- attachment block -->
		
		<%= render :partial => "attachments_form", :locals => {:f => f} %> 
		
		<div class="well span8">
			<%= f.label :content %>
		
			
			<%= link_to_function "Insert Carousel wrapper", "insertMarkup(this, 'carousel')", :class=> "btn btn-mini"%>
			<%= link_to_function "Insert Superscript", "insertMarkup(this,'superscript')", :class=> "btn btn-mini"%>
			<%= link_to_function "Insert Code", "insertMarkup(this,'code')", :class=> "btn btn-mini"%>
			
			<br><br>
			<%= f.text_area :content, :class=>"span8"%>
		
			
		
			<br>
			<!-- citations -->
			<%= render :partial => "citations_form", :locals => {:f => f} %>
			
			
			<%= f.submit :class=> "btn btn-primary"%>
		
		</div> 


	
</div>
<% end %> 