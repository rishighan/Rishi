<%= nested_form_for([:admin, @post], :remote=>true, :html => { :multipart => true }) do |f| %>

<% if @post.errors.any? %>
<div class="control-group error">
	<h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>
	<ul>
		<% @post.errors.full_messages.each do |msg| %>
		<li>
			<%= msg %>
		</li>
		<% end %>
	</ul>
</div>
<% end %>
<div class="row">
	<span class="span3">
		<div class="field">
			<%= f.label :title %>
			<br/>
			<%= f.text_field :title %>
		</div> </span>
	<span class="span2">
		<div class="field">
			<%= f.label :category_id %>
			<br/>
			<%= collection_select(:post, :category_id, Category.all, :id, :category_name, :prompt => true) %>
		</div> </span>
</div>
<!-- attachment block -->
<div class="row">
	<span class="span6"> <%= render :partial => "attachments_form", :locals => {:f => f} %> </span>
</div>
<div class="row">
	<span class="span6">
		<div class="field">
			<%= f.label :keyword_list%>
			<br/>
			<%= f.text_field :keyword_list %>
		</div> </span>
</div>
<div class="row">
	<span class="span8">
		<div class="field">
			<%= f.label :content %>
			<br/>
			<%= f.text_area :content %>
			<br>
			<%= link_to_function "Insert Carousel wrapper", "insertMarkup(this, 'carousel')", :class=> "btn"%>
			<%= link_to_function "Insert Superscript", "insertMarkup(this,'superscript')", :class=> "btn"%>
			<%= link_to_function "Insert Code", "insertMarkup(this,'code')", :class=> "btn"%>
			<br>
			<!-- citations -->
			<%= render :partial => "citations_form", :locals => {:f => f} %>
		</div> </span>
</div>
<div class="actions">
	<%= f.submit%>
</div>
<% end %> 