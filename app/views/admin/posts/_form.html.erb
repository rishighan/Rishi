<%= nested_form_for([:admin, @post],  :html => { :multipart => true, :class=>" form-horizontal span12" }) do |f| %>

<% if @post.errors.any? %>
<div class="control-group error">
	<h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>
	<ul>
		<% @post.errors.full_messages.each do |msg| %>
		<li>
			<%= msg %>
		</li>
		<% end %>
	</ul>
</div>
<% end %>

		<div class="well">
		 <legend><%= controller.action_name.capitalize %> Post</legend>
			<%= f.label :title%>
			<%= f.text_field :title %>
		
			<p>
			
			<%= f.label "Category" %>
			<% for cat in Category.find(:all) %>
			<li><%= check_box_tag "post[category_ids][]", cat.id, post_categories?(cat) %>
			<%= cat.category_name %> </li>
			<%end %>
			
			</p>
			<%= f.label :keyword_list%>
			<%= f.text_field :keyword_list %>
			
			
		</div> 

		<!-- attachment block -->	
		<%= render :partial => "attachments_form", :locals => {:f => f} %> 
		
		<div class="well">
			<%= f.label :content %>
		
			
			<%= link_to_function "Insert Carousel wrapper", "insertMarkup(this, 'carousel')", :class=> "btn btn-mini"%>
			<%= link_to_function "Insert Superscript", "insertMarkup(this,'superscript')", :class=> "btn btn-mini"%>
			<%= link_to_function "Insert Code", "insertMarkup(this,'code')", :class=> "btn btn-mini"%>
			
			<br><br>
			<%= f.text_area :content, :class=>"span8"%>
		

			<br>
		<!-- citations -->
		<%= render :partial => "citations_form", :locals => {:f => f} %>
		<br><br>
		<%= f.submit :class=> "btn btn-primary"%>
		
		</div> 


	
</div>
<% end %> 